<div class="wrap container">
  <!-- Collapse buttons -->
  <div class="detaile">
    <a class="btn btn-info rounded-circle p-0 clear-area" style="width:2rem;height:2rem;" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
      <%= t('recruitment.index.detail_title') %>
    </a>
  </div>
  <!-- / Collapse buttons -->
  <!-- Collapsible element -->
  <div class="collapse show container-fullfill row" id="collapseExample">
    <div class="col-6 search_detail">
      <p class="search_detail_title btn btn-primary"><%= t('recruitment.index.search_detail') %></p>
      <div class="mt-3">
        <%= render 'search_form' %>
      </div>
    </div>
    <div class="col-6 ranking">
      <div>
        <p class="ranking_title btn btn-primary"><%= t('recruitment.index.ranking') %></p>
      </div>
      <div class="mt-3">
        <%= render 'popular_areas' %>
      </div>
    </div>
  </div>
  <!-- / Collapsible element -->
  <%= render 'create' %>

  <div class='mb-3 index_wrap'>
    <table class='table table-hover', id="test">
      <thead class='thead-default'>
        <tr>
          <th><%= t('recruitment.index.owner_level') %></th>
          <th><%= t('recruitment.index.area') %></th>
          <th><%= t('recruitment.index.model') %></th>
          <th><%= t('recruitment.index.secret_word') %></th>
          <th><%= t('recruitment.index.lap_count') %></th>
          <th><%= t('recruitment.index.created') %></th>
        </tr>
      </thead>
      <tbody>
        <% @recruitments.each do |r| %>
          <tr>
            <td><%= r.owner_level %></td>
            <td><%= r.area_i18n %></td>
            <td><%= r.game_model_i18n %></td>
            <td><%= r.secret_word %></td>
            <td><%= r.lap_count %></td>
            <td><%= r.created_at.strftime("%m#{t('recruitment.index.month')}%d#{t('recruitment.index.day')} %H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

