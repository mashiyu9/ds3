<h1>募集一覧</h1>

<div class="container">
  <button type="button" class="btn btn-primary mt-5" data-toggle="modal" data-target="#post"><%= t('recruitment.index.create') %></button>
  <div class="modal fade" id="post" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= render partial: 'form', locals: {recruitment: @recruitment} %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <button type="button" class="btn btn-primary">投稿する</button>
        </div>
      </div>
    </div>
  </div>
</div>
<%#
<button class="btn btn-primary mb12", data-target="#testModal", data-toggle="modal", type="button">参加条件を入力して参加</button>
<div id="testModal", class="modal fade show", aria-hidden="true", aria-labelledby="basicModal", role="dialog", tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <h1>test</h1>
    </div>
  </div>
</div> %>



<%= render 'search_form' %>

<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead-default'>
      <tr>
        <th>募集主のLevel</th>
        <th>攻略エリア</th>
        <th>機種</th>
        <th>合言葉</th>
        <th>周回数</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @recruitments.each do |r| %>
        <tr>
          <td><%= r.owner_level %></td>
          <td><%= r.area_i18n %></td>
          <td><%= r.game_model_i18n %></td>
          <td><%= r.secret_word %></td>
          <td><%= r.lap_count %></td>
          <td><%= r.created_at.strftime("%m月%d日 %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

