<h1>タスク一覧</h1>

<%= link_to '新規募集開始', new_recruitment_path, class: 'btn btn-primary' %>

<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead-default'>
      <tr>
        <th>人気エリア</th>
        <th>部屋数</th>
      </tr>
    </thead>
    <tbody>
      <% @popular_areas.each do |p_area, point| %>
        <tr>
          <td><%= p_area %></td>
